    <!-- // script file  -->
    <script>
        var profileInput = document.querySelector(".items input");
        var profileImg = document.querySelector(".profile-image1 img");

        document.querySelector(".items").addEventListener("click",(elem)=>{
            // console.log(elem.target.className)
            if(elem.target.className === "ri-add-circle-fill"){
                profileInput.click();
            }
        })
        profileInput.addEventListener("change",()=>{
            console.log(URL.createObjectURL(profileInput.files[0]))
            profileImg.src = URL.createObjectURL(profileInput.files[0])
        })
    </script>
