            <div class="bottom-right item">
                <h2>Register</h2>
                <form action="/register" method="post" enctype="multipart/form-data">
                    <div class="items">
                        <div class="profile-image1">
                            <img src="https://cdn-icons-png.flaticon.com/512/5087/5087579.png" alt="" class="">
                            <i class="ri-add-circle-fill"></i>
                        </div>
                        <input type="file" class="input1" name="profileImg" accept="image/jpeg, image/png, image/jpg, image/gif, image/webp" required>
                    </div>
                    <div class="input-item">
                        <label for="">Fullname</label>
                        <input type="text" placeholder="Enter Fullname" name="username" required>
                    </div>
                    <div class="input-item">
                        <label for="">Email</label>
                        <input type="email" placeholder="Enter Email Address" name="email" required>
                    </div>
                    <div class="input-item">
                        <label for="">Password</label>
                        <input type="password" placeholder="Enter Password" name="password" required>
                    </div>
                    <div class="input-item">
                        <label for="">Confirm password</label>
                        <input type="text" placeholder="Enter confirm password" name="confirmpassword" required>
                    </div>
                    <button>Sing Up</button>
                </form>
                <span>or</span>
                <a href="/auth/google" class="continue-google">Continue with Google</a>
            </div>
